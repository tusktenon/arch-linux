    xorg-xinit
    xorg-xprop
    xorg-xrandr
    fontconfig
    mesa-demos
    xterm

    # GTK
    gtk3
    lxappearance-gtk3
    #dconf-editor
    arc-solid-gtk-theme
    breeze-gtk
    materia-gtk-theme

    # Qt
    qt5-base
    #qt5-svg
    qt5ct
    kvantum-qt5

    # Cursors and icons
    hicolor-icon-theme
    papirus-icon-theme

    # Common packages
    dmenu
    feh
    rofi

    # Window managers
    i3-gaps
    i3lock
    qtile
)

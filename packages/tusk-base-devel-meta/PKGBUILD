# Use `pacman -Sg base-devel` to obtain a list of group members

pkgname=tusk-base-devel-meta
pkgver=1
pkgrel=1
pkgdesc='Meta-package to install the members of the base-devel group'
arch=('any')
license=('GPL')
url='https://github.com/tusktenon/arch-linux'
depends=(
    autoconf
    automake
    binutils
    bison
    fakeroot
    file
    findutils
    flex
    gawk
    gcc
    gettext
    grep
    groff
    gzip
    libtool
    m4
    make
    pacman
    patch
    pkgconf
    sed
    sudo
    texinfo
    which
)
